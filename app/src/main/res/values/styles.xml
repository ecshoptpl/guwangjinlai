<resources>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">?android:colorPrimary</item>
        <item name="tabTextAppearance">@style/MyTabLayoutTextAppearanceInverse</item>
    </style>
    
    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
