<resources>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">?android:colorPrimary</item>
        <item name="tabTextAppearance">@style/MyTabLayoutTextAppearanceInverse</item>
    </style>
    
    <style name="MyTabLayoutTextAppearanceInverse" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>






    <style name="MaterialMoviesHeaderTextView" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialMoviesDetailField" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:visibility">gone</item>

    </style>



    <style name="MaterialMoviesFabLabel" />


    <style name="MaterialMoviesDetailConfirmation">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
